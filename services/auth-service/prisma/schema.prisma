// services/auth-service/prisma/schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  isTokenHolder Boolean  @default(false)
  createdAt     DateTime @default(now())
}
